import fetch from 'node-fetch';

let handler = async (m, { conn, args, command, usedPrefix }) => {
  const query = args.join(" ");
  if (!query) {
    return m.reply(
      `â•­â”€â¬£ã€Œ *Spotify Downloader* ã€â¬£
â”‚ â‰¡â—¦ ğŸ§ *Uso correcto:*
â”‚ â‰¡â—¦ .${command} shakira loba
â•°â”€â¬£`
    );
  }

  try {
    const res = await fetch(`https://api.nekorinn.my.id/downloader/spotifyplay?q=${encodeURIComponent(query)}`);
    const json = await res.json();

    if (!json.status || !json.result?.downloadUrl) {
      return m.reply(
        `â•­â”€â¬£ã€Œ *Spotify Downloader* ã€â¬£
â”‚ â‰¡â—¦ âŒ *No se encontrÃ³ resultado para:* ${query}
â•°â”€â¬£`
      );
    }

    const { title, artist, duration, cover, url } = json.result.metadata;
    const audio = json.result.downloadUrl;

    // Enviar imagen con info
    await conn.sendMessage(m.chat, {
      image: { url: cover },
      caption: `â•­â”€â¬£ã€Œ *SPOTIFY* ã€â¬£
â”‚ ğŸµ *TÃ­tulo:* ${title}
â”‚ ğŸ‘¤ *Artista:* ${artist}
â”‚ â±ï¸ *DuraciÃ³n:* ${duration}
â”‚ ğŸŒ *Spotify:* ${url}
â•°â”€â¬£`
    }, { quoted: m });

    // Enviar audio
    await conn.sendMessage(m.chat, {
      audio: { url: audio },
      mimetype: 'audio/mp4',
      ptt: false,
      fileName: `${title}.mp3`
    }, { quoted: m });

  } catch (err) {
    console.error(err);
    return m.reply(
      `â•­â”€â¬£ã€Œ *Spotify Downloader* ã€â¬£
â”‚ âš ï¸ *Error al procesar la canciÃ³n.*
â”‚ â³ Intenta de nuevo mÃ¡s tarde.
â•°â”€â¬£`
    );
  }
};

handler.help = ['spotify <nombre o enlace>'];
handler.tags = ['descargas', 'musica'];
handler.command = /^spotify$/i;
handler.register = false;
handler.owner = false;
handler.group = false;
handler.premium = false;

export default handler;
